<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox fx:controller="fileManager.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER" stylesheets="Styles.css">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text = "Выход" onAction="#btnExit"/>
        </Menu>
    </MenuBar>
    <TextField editable="false"/>
    <ListView VBox.vgrow="ALWAYS" fx:id="filesList"/>
    <HBox spacing="5">
        <Button text="Просмотр" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Копирование" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Перемещение" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Удаление" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
</VBox>
